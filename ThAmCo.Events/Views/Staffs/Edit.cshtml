@model ThAmCo.Events.Models.Staff

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Staffid" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffType" class="control-label"></label>
                <select class="form-control" id="StaffType" name="StaffType">
                    <option value="">- Please select a role-</option>
                    <option value="Manager">Manager</option>
                    <option value="Waiter">Waiter</option>
                    <option value="Bartender">Bartender</option>
                    <option value="Wedding Planner">Wedding Planner</option>
                    <option value="Caterer">Caterer</option>
                    <option value="Photographer">Photographer</option>
                    <option value="Event Organiser">Event Organiser</option>
                    <option value="DJ Music Mixer">DJ Music Mixer</option>
                    <option value="Decorator">Decorator</option>
                    <option value="Host">Host</option>
                </select>
                <span asp-validation-for="StaffType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckAvailibility" class="control-label"></label>
                <input type="checkbox" asp-for="CheckAvailibility" class="form-control" />
                <span asp-validation-for="CheckAvailibility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isFirstAider" class="control-label"></label>
                <input type="checkbox" asp-for="isFirstAider" class="form-control" />
                <span asp-validation-for="isFirstAider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
