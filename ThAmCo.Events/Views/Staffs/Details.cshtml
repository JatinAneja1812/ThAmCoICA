@model ThAmCo.Events.ViewModels.StaffDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StaffType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StaffType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckAvailibility)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckAvailibility)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.isFirstAider)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isFirstAider)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Staffid">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h1>Assigned Event</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.staffings.FirstOrDefault().Event.EventTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.staffings.FirstOrDefault().Event.EventDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.staffings.FirstOrDefault().Event.EventTypeId)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.staffings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventTypeId)
                </td>
                <td>

                </td>

            </tr>
        }
    </tbody>
</table>
