@model ThAmCo.Events.EventDTOs.FoodBookingDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FoodBookingDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientReferenceId" class="control-label"></label>
                <input asp-for="ClientReferenceId" class="form-control" />
                <span asp-validation-for="ClientReferenceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfGuests" class="control-label"></label>
                <input asp-for="NumberOfGuests" class="form-control" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuId" class="control-label"></label>
                @Html.DropDownList("MenuId", @ViewBag.MenuId as List<SelectListItem>, "Select Menu",new { @class = "form-control", @onchange = "GetSelectedTextValue(this)", @id = "Menus" })
            <script type="text/javascript">
                function page_redirect(id) {
                    window.location = "https://localhost:44354/MenuFoodItemsDTO/Index/"+ id;
                }
                function GetSelectedTextValue(Menus) {
                    var selectedText = Menus.options[Menus.selectedIndex].innerHTML;
                    var selectedValue = Menus.value;
                    /*alert("Selected Text: " + selectedText + " Value: " + selectedValue);*/
                    page_redirect(selectedValue);
                }
                </script>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
