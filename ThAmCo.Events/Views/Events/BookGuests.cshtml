@model ThAmCo.Events.Models.Customer
@{
    ViewData["Title"] = "BookGuests";
}



@using (Html.BeginForm("BookGuests", "Events", FormMethod.Post))
{
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1 align="Center"> Guest Email Address</h1>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                @Html.TextBoxFor(m => m.EmailId, "Enter your Email-Id", new { style = "color:red" })
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>}


