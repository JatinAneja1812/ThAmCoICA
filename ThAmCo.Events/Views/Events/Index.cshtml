@model IEnumerable<ThAmCo.Events.ViewModels.EventIndexViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Our Event's List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<body style="background-color:aliceblue">
    <table class="table" style="background-color:antiquewhite">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventTypeTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventDateTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventTypeTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventDateTime)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a> |
                        <a></a>
                        <input type="button" class="btn btn-outline-primary mx-0" value="BookAGuest" onclick="@("window.location.href='" + @Url.Action("BookGuests", "Events") + "'");" />
                        <a></a>|
                        <input type="button" class="btn btn-outline-primary mx-0" value="AvailableVenues" onclick="@("window.location.href='" + @Url.Action("BookVenues", "Events",new { EventTypesid = item.EventTypeId, begindate = item.EventDateTime, eventid = item.EventId}) + "'");" />
                        <a></a>|
                        <input type="button" class="btn btn-outline-primary mx-0" value="BookAMenu" onclick="@("window.location.href='" + @Url.Action("Create", "FoodBookingDTO", new { ClientReferenceId = item.EventId, NumofGuests = item.TotalGuestcount }) + "'");" />

                    </td>

                </tr>
            }
        </tbody>
    </table>
</body>